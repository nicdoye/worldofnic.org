{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "worldofnic-rc"
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "app": "worldofnic-jekyll"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "worldofnic-jekyll"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "worldofnic",
                        "image": "eu.gcr.io/worldofnic-production/worldofnic",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [
                            {
                                "containerPort": 80,
                                "hostPort": 80,
                                "name": "http-server"
                            },
                            {
                                "containerPort": 443,
                                "hostPort": 443,
                                "name": "https-server"
                            }
                        ]
                    }
                ],
                "restartPolicy": "Always",
                "volumes": null
            }
        }
    }
}
